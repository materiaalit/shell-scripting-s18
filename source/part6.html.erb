      public void lisaaKirja(Kirja kirja) {
          String nimi = kirja.getNimi();
          if (nimi == null) {
              nimi = "";
          }

          nimi = nimi.toLowerCase();
          nimi = nimi.trim();

          if (this.hakemisto.containsKey(nimi)) {
              System.out.println("Kirja on jo kirjastossa!");
          } else {
              hakemisto.put(nimi, kirja);
